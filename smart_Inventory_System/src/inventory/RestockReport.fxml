<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="inventory.RestockReportController"
      spacing="15" alignment="CENTER">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Restock Report - Low Stock Products" style="-fx-font-size: 18px;"/>

    <TableView fx:id="restockTable" prefWidth="600" prefHeight="400">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="nameColumn" text="Product Name" prefWidth="200"/>
            <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="100"/>
            <TableColumn fx:id="thresholdColumn" text="Threshold" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>
