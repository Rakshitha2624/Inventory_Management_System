<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="inventory.ForgotPasswordController"
            prefWidth="400" prefHeight="300"
            style="-fx-background-color: linear-gradient(to bottom right, #f0f2f5, #d9e4f5);">

    <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="30" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label text="ðŸ” Reset Password"
               style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <GridPane hgap="10" vgap="15">
            <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="usernameField" promptText="Enter username" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="New Password:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <PasswordField fx:id="newPasswordField" promptText="Enter new password" GridPane.rowIndex="1" GridPane.columnIndex="1" />
        </GridPane>

        <Label fx:id="statusLabel" textFill="red" style="-fx-font-weight: bold;" />

        <Button text="Reset Password"
                onAction="#handleResetPassword"
                style="-fx-background-color: #007bff; -fx-text-fill: white;" />
    </VBox>
</AnchorPane>
