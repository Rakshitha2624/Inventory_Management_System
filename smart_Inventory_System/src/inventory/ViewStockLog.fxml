<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="inventory.ViewStockLogController"
      spacing="15" alignment="CENTER">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Stock Movement Logs" style="-fx-font-size: 18px;" />

    <TableView fx:id="stockLogTable" prefWidth="600" prefHeight="300">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="productIdColumn" text="Product ID" prefWidth="100"/>
            <TableColumn fx:id="actionColumn" text="Action" prefWidth="100"/>
            <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="100"/>
            <TableColumn fx:id="timestampColumn" text="Timestamp" prefWidth="200"/>
        </columns>
    </TableView>

</VBox>
