<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="inventory.VendorController"
            prefWidth="400" prefHeight="350" style="-fx-background-color: #f4f4f4;">
    
    <VBox spacing="15" alignment="CENTER" AnchorPane.topAnchor="30" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30">
        <Label text="âž• Add Vendor" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <TextField fx:id="nameField" promptText="Vendor Name" />
        <TextField fx:id="contactField" promptText="Contact Number" />
        <TextField fx:id="emailField" promptText="Email Address" />
        <TextArea fx:id="addressField" promptText="Address" prefRowCount="3" />

        <Button text="Save Vendor" onAction="#handleAddVendor" style="-fx-background-color: #27ae60; -fx-text-fill: white;" />
        <Label fx:id="messageLabel" textFill="red" />
    </VBox>
</AnchorPane>
