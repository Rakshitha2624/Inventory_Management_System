<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="inventory.AddProductController" prefWidth="400" prefHeight="400">
    <children>
        <VBox spacing="10" alignment="CENTER" layoutX="50" layoutY="30">
            <Label text="Add Product"/>
            <TextField fx:id="nameField" promptText="Product Name"/>
            <TextField fx:id="quantityField" promptText="Quantity"/>
            <TextField fx:id="priceField" promptText="Price"/>
            <TextField fx:id="thresholdField" promptText="Threshold"/>
            <Button text="Add Product" fx:id="saveButton" onAction="#handleAddProduct"/>
        </VBox>
    </children>
</AnchorPane>
