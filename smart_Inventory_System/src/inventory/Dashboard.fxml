<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.layout.BorderPane?>   <!-- âœ… Explicit import for BorderPane -->
<BorderPane fx:controller="inventory.DashboardController"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="dashboardPane">

    <!-- Sidebar -->
    <left>
        <VBox spacing="10" alignment="TOP_CENTER" style="-fx-background-color: #2c3e50;" prefWidth="200">
            <padding><Insets top="20" right="10" bottom="15" left="10"/></padding>

            <Label text="ðŸ“¦ Inventory" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />

            <Button text="Dashboard" onAction="#showDashboard" prefWidth="160"/>
            <Button text="Vendors" onAction="#handleVendors" prefWidth="160"/>
            <Button text="View Vendors" onAction="#handleViewVendors" prefWidth="160"/>
            <Button text="View Products" onAction="#handleViewProducts" prefWidth="160"/>
            <Button text="Add Product" onAction="#handleAddProduct" prefWidth="160"/>
            <Button text="Stock Movement" onAction="#handleStockLog" prefWidth="160"/>
            <Button text="View Stock Logs" onAction="#handleViewStockLogs" prefWidth="160"/>
            <Button text="Restock Report" onAction="#handleRestockReport" prefWidth="160"/>
            <Button text="Low Stock" onAction="#handleLowStock" prefWidth="160"/>
            <Button text="Backup Database" onAction="#handleBackup" prefWidth="160"/>
            <Button text="Restore Database" onAction="#handleRestore" prefWidth="160"/>
            <Button text="Logout" onAction="#handleLogout" prefWidth="160"/>
        </VBox>
    </left>

    <!-- Top Bar -->
    <top>
        <HBox style="-fx-background-color: #ecf0f1;" alignment="CENTER_RIGHT">
            <padding><Insets top="10" right="20" bottom="15" left="10"/></padding>
            <Label text="Welcome, Admin ðŸ‘¤" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
        </HBox>
    </top>

    <!-- Main Content -->
   <center>
    <VBox fx:id="centerBox" spacing="20" alignment="TOP_CENTER" style="-fx-background-color: #f9f9f9;">
        <padding>
            <Insets top="20" right="20" bottom="15" left="20"/>
        </padding>

        <!-- Cards -->
        <HBox spacing="20" alignment="CENTER">
            <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #3498db; -fx-padding: 20; -fx-background-radius: 10;" prefWidth="150">
                <Label text="Total Products" style="-fx-text-fill: white;" />
                <Label fx:id="totalProductsLabel" text="0" style="-fx-font-size: 18px; -fx-text-fill: white;" />
            </VBox>

            <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #2ecc71; -fx-padding: 20; -fx-background-radius: 10;" prefWidth="150">
                <Label text="Low Stock" style="-fx-text-fill: white;" />
                <Label fx:id="lowStockLabel" text="0" style="-fx-font-size: 18px; -fx-text-fill: white;" />
            </VBox>
        </HBox>

        <!-- Chart Area -->
        <HBox fx:id="chartArea" spacing="20" alignment="CENTER" VBox.vgrow="ALWAYS">
            <!-- Charts will be loaded from controller -->
        </HBox>
    </VBox>
</center>

</BorderPane>
